---
interface Props {
  className?: string;
  padding?: 'none' | 'sm' | 'md' | 'lg';
  hover?: boolean;
}

const { 
  className = '', 
  padding = 'md',
  hover = false
} = Astro.props;

const baseStyles = 'bg-dark-lighter rounded-xl shadow-xl backdrop-blur-sm border border-primary/10';
const hoverStyles = hover ? 'transition-all duration-300 hover:scale-105 hover:shadow-2xl hover:shadow-primary/20 hover:border-primary/30' : '';

const paddings = {
  none: '',
  sm: 'p-4',
  md: 'p-6',
  lg: 'p-8'
};

const classes = `${baseStyles} ${hoverStyles} ${paddings[padding]} ${className}`;
---

<div class={classes}>
  <slot />
</div>
