---
interface Props {
  href?: string;
  variant?: 'primary' | 'secondary' | 'outline';
  size?: 'sm' | 'md' | 'lg';
  className?: string;
  type?: 'button' | 'submit';
}

const { 
  href, 
  variant = 'primary', 
  size = 'md',
  className = '',
  type = 'button'
} = Astro.props;

const baseStyles = 'inline-flex items-center justify-center font-bold rounded-lg transition-all duration-300 focus:outline-none focus:ring-4 uppercase tracking-wide';

const variants = {
  primary: 'bg-primary text-black hover:bg-primary-dark focus:ring-primary/50 shadow-lg hover:shadow-primary/50 hover:scale-105 font-black',
  secondary: 'bg-accent text-black hover:bg-accent/90 focus:ring-accent/50 shadow-lg hover:shadow-accent/50 hover:scale-105',
  outline: 'border-3 border-primary text-primary hover:bg-primary hover:text-black focus:ring-primary/50 hover:scale-105 hover:shadow-primary/30'
};

const sizes = {
  sm: 'px-4 py-2 text-sm',
  md: 'px-8 py-3 text-base',
  lg: 'px-10 py-4 text-lg'
};

const classes = `${baseStyles} ${variants[variant]} ${sizes[size]} ${className}`;
---

{href ? (
  <a href={href} class={classes}>
    <slot />
  </a>
) : (
  <button type={type} class={classes}>
    <slot />
  </button>
)}
