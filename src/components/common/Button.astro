---
interface Props {
  href?: string;
  variant?: 'primary' | 'secondary' | 'outline';
  size?: 'sm' | 'md' | 'lg';
  className?: string;
  type?: 'button' | 'submit';
}

const { 
  href, 
  variant = 'primary', 
  size = 'md',
  className = '',
  type = 'button'
} = Astro.props;

const baseStyles = 'inline-flex items-center justify-center font-bold rounded-lg transition-all duration-300 focus:outline-none focus:ring-4 uppercase tracking-wide';

const variants = {
  primary: 'bg-[#D4FF00] text-black hover:bg-[#B8E000] focus:ring-[#D4FF00]/50 shadow-lg hover:shadow-[#D4FF00]/50 hover:scale-105',
  secondary: 'bg-[#FF006E] text-white hover:bg-[#E0005E] focus:ring-[#FF006E]/50 shadow-lg hover:shadow-[#FF006E]/50 hover:scale-105',
  outline: 'border-3 border-[#D4FF00] text-[#D4FF00] hover:bg-[#D4FF00] hover:text-black focus:ring-[#D4FF00]/50 hover:scale-105'
};

const sizes = {
  sm: 'px-4 py-2 text-sm',
  md: 'px-8 py-3 text-base',
  lg: 'px-10 py-4 text-lg'
};

const classes = `${baseStyles} ${variants[variant]} ${sizes[size]} ${className}`;
---

{href ? (
  <a href={href} class={classes}>
    <slot />
  </a>
) : (
  <button type={type} class={classes}>
    <slot />
  </button>
)}
