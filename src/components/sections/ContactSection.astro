---
import Container from '@/components/common/Container.astro';
import Card from '@/components/common/Card.astro';
import Button from '@/components/common/Button.astro';
import { SITE_CONFIG } from '@/config/site.config';
---

<section class="py-20 bg-dark relative overflow-hidden">
  <!-- Background effects -->
  <div class="absolute inset-0 grid-pattern opacity-30"></div>
  <div class="absolute top-1/2 left-0 w-1/2 h-0.5 bg-linear-to-r from-primary to-transparent opacity-50"></div>
  
  <Container>
    <div class="max-w-2xl mx-auto">
      <div class="text-center mb-12 relative">
        <h2 class="text-4xl md:text-6xl font-black text-white mb-4">
          Trabajemos <span class="text-primary text-glow">Juntos</span>
        </h2>
        <p class="text-xl text-gray-400">
          ¿Tienes un proyecto en mente? Me encantaría escuchar sobre él
        </p>
      </div>
      
      <Card padding="lg" className="border-2 border-primary/30 hover:border-primary transition-all glow-effect">
        <form class="space-y-6">
          <div>
            <label for="name" class="block text-sm font-bold text-white mb-2 uppercase">
              Nombre
            </label>
            <input
              type="text"
              id="name"
              name="name"
              required
              class="w-full px-4 py-3 bg-black/50 border-2 border-primary/20 text-white rounded-lg focus:ring-2 focus:ring-primary focus:border-primary transition-all hover:border-primary/40"
              placeholder="Tu nombre"
            />
          </div>
          
          <div>
            <label for="email" class="block text-sm font-bold text-white mb-2 uppercase">
              Email
            </label>
            <input
              type="email"
              id="email"
              name="email"
              required
              class="w-full px-4 py-3 bg-black/50 border-2 border-primary/20 text-white rounded-lg focus:ring-2 focus:ring-primary focus:border-primary transition-all hover:border-primary/40"
              placeholder="tu@email.com"
            />
          </div>
          
          <div>
            <label for="message" class="block text-sm font-bold text-white mb-2 uppercase">
              Mensaje
            </label>
            <textarea
              id="message"
              name="message"
              rows="5"
              required
              class="w-full px-4 py-3 bg-black/50 border-2 border-primary/20 text-white rounded-lg focus:ring-2 focus:ring-primary focus:border-primary resize-none transition-all hover:border-primary/40"
              placeholder="Cuéntame sobre tu proyecto..."
            ></textarea>
          </div>
          
          <Button type="submit" size="lg" className="w-full">
            Enviar Mensaje
          </Button>
        </form>
      </Card>
      
      <div class="mt-12 text-center">
        <p class="text-gray-400 mb-4 uppercase font-bold tracking-wide">O contáctame directamente:</p>
        <a 
          href={`mailto:${SITE_CONFIG.email}`}
          class="text-primary hover:text-primary-dark font-bold text-xl transition-all text-glow"
        >
          {SITE_CONFIG.email}
        </a>
      </div>
    </div>
  </Container>
</section>
